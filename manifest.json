{
  "manifest_version": 2,
  "name": "TelNowEdge Click to Call",
  "author": "Boris Morel",
  "version": "1.0",
  "description": "TelNowEdge ClicktoCall adds link to dial on any Web Page that contains a phone number.",
  "applications": {
    "gecko": {
      "id": "test@example.com"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "background": {
    "scripts": [
      "jquery-3.2.1.min.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*/"],
      "js": [
        "main.js"
      ]
    }
  ],
  "permissions": [
    "storage"
  ]
}

{
  "manifest_version": 2,
  "name": "TelNowEdge Click to Call",
  "author": "TelNowEdge - Boris Morel",
  "version": "1.0",
  "description": "TelNowEdge ClicktoCall adds link to dial on any Web Page that contains a phone number.",
  "applications": {
    "gecko": {
      "id": "test@example.com"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "background": {
    "scripts": [
      "jquery-3.2.1.min.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*",
      ],
      "js": [
        "lib/libphonenumber-js.min.js",
        "Security/md5.min.js",
        "Security/sha256.js",
        "Manager/DataStorage.js",
        "Provider/Connection.js",
        "Provider/Authenticator.js",
        "Provider/Command.js",
        "Manager/DomWriter.js",
        "Manager/DomParser.js",
        "main.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "*://*/3pcc/GetChallenge",
    "*://*/3pcc/Auth/*"
  ],
  "web_accessible_resources": [
    "images/phone.png"
  ]
}
